<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_movie"
    app:startDestination="@id/movieOverviewFragment">

    <fragment
        android:id="@+id/movieOverviewFragment"
        android:name="com.tdtruong.flicks.ui.overview.MovieOverviewFragment"
        android:label="MovieOverviewFragment"
        tools:layout="@layout/fragment_movie_overview" >
        <action
            android:id="@+id/nav_movieDetail"
            app:destination="@id/MovieDetailFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/MovieDetailFragment"
        android:name="com.tdtruong.flicks.ui.detail.MovieDetailFragment"
        android:label="MovieDetailFragment"
        tools:layout="@layout/fragment_movie_detail">

        <argument
            android:name="selectedMovie"
            app:argType="integer"
            />
    </fragment>
</navigation>